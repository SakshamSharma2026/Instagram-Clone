<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage.LoginScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/instagram"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/item_input_card_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:id="@+id/input_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/uigitdev_elements_input_field_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">


                        <EditText
                            android:id="@+id/item_input_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="#106B6969"
                            android:imeOptions="actionDone"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Email"
                            android:paddingStart="10dp"
                            android:paddingTop="13dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="13dp"
                            android:textColor="#131313"
                            android:textColorHint="#787878"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/item_input_card_parent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:id="@+id/input_style2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/uigitdev_elements_input_field_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <!--To change the color of the cursor, you need to change the color in the
                        "@drawable/uigitdev_cursor_style_3" file.
                        Under Android 10, the modification is not compatible, but it works in XML.-->
                        <EditText
                            android:id="@+id/item_input_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="#106B6969"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:hint="Password"
                            android:paddingStart="10dp"
                            android:paddingTop="13dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="13dp"
                            android:textColor="#131313"
                            android:textColorHint="#787878"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@color/blue"
                    android:id="@+id/btn_next"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">


                        <ProgressBar
                            android:id="@+id/button_progress"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:layout_toStartOf="@id/button_text"
                            android:indeterminate="true"
                            android:indeterminateTint="#ffffff"
                            android:visibility="gone"
                            android:indeterminateTintMode="src_atop"
                            />

                        <TextView
                            android:id="@+id/button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:paddingStart="10dp"
                            android:paddingTop="13dp"
                            android:paddingEnd="10dp"
                            android:gravity="center"
                            android:paddingBottom="13dp"
                            android:textColor="@color/white"
                            android:text="Log in"
                            android:fontFamily="@font/medium"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


